{
	"name": "django-container",
	"build": {
		"dockerfile": "../Dockerfile",
		"context": ".."
	},
	"runArgs": ["--name=django-container", "--rm"],
	"workspaceFolder": "/code",
	"workspaceMount": "source=${localWorkspaceFolder},target=/code,type=bind",
	"mounts": [
		{
			"type": "volume",
			"source": "devcontainer_venv",
			"target": "${containerWorkspaceFolder}/.venv"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.autopep8",
				"ms-python.isort",
				"batisteo.vscode-django",
				"Glavin001.unibeautify-vscode"
			],
			"settings": {
				"emmet.includeLanguages": {
					"django-html": "html"
				},
				"[python]": {
					"editor.defaultFormatter": "ms-python.autopep8"
				},
				"[django-html]": {
					"editor.defaultFormatter": "Glavin001.unibeautify-vscode"
				}
			}
		}
	}
}
